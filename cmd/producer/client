#!/bin/bash

APPNAME=$1
PORT=$2
TIMESTAMP=$3
LOG_FILE="bin_"$(date +%s).log

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# valgrind --leak-check=full --show-leak-kinds=all --log-file="leak_dump.log" ./client.bin $APPNAME $PORT $TIMESTAMP

$DIR/client.bin $APPNAME $PORT $TIMESTAMP &> $LOG_FILE
