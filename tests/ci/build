#!/bin/bash

export PATH=$PATH:~/bin

rm -rf ~/.ciscripts
git clone -q git://github.com/couchbase/eventing ~/.ciscripts
cd ~/.ciscripts
git checkout unstable

while true; do
  git pull -q
  find eventing/tests/ci -not -name 'build' -and -not -name '.*' -type f -exec cp -v {} ~/bin/ \;
  domain
  sleep 600
done

